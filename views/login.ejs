<%- include('partials/header', { title: "Login", user: user }) %>
<div class="max-w-md mx-auto mt-10">
  <h1 class="text-3xl mb-4">Login</h1>
  <% if (error) { %>
    <div class="bg-red-500 p-2 mb-4"><%= error %></div>
  <% } %>
  <form action="/login" method="POST" class="space-y-4">
    <div>
      <label for="email" class="block">Email</label>
      <input type="email" name="email" id="email" class="w-full p-2 bg-gray-800 border border-gray-600">
    </div>
    <div>
      <label for="password" class="block">Password</label>
      <input type="password" name="password" id="password" class="w-full p-2 bg-gray-800 border border-gray-600">
    </div>
    <button type="submit" class="btn px-4 py-2">Login</button>
  </form>
  <p class="mt-4">Non hai un account? <a href="/signup" class="underline">Registrati</a></p>
</div>
<%- include('partials/footer') %>
