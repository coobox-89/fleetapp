<%- include('partials/header', { title: "Importa Baseline", user: user }) %>

<main class="flex-grow flex items-center justify-center px-4 bg-[#2C3E50] text-[#ecf0f1]">
  <div class="bg-[#34495e] p-8 rounded-lg shadow-lg w-full max-w-lg space-y-6">
    
    <h1 class="text-2xl font-bold text-center">Importa Baseline Auto</h1>
    <p class="text-sm text-gray-300 text-center">
      Carica un file in formato <strong>CSV</strong> o <strong>XLS</strong>.<br />
      Scarica il <a href="/assets/import_template.csv" class="text-green-400 underline hover:text-green-300" download>template di esempio</a>.
    </p>

    <% if (error) { %>
      <div class="bg-red-500 text-white text-sm px-4 py-2 rounded text-center">
        <%= error %>
      </div>
    <% } %>

    <form action="/cars/import" method="POST" enctype="multipart/form-data" class="space-y-6">
      <div class="text-center">
        <label for="importFile" class="btn inline-block cursor-pointer">
          Scegli File CSV/XLS
        </label>
        <input id="importFile" type="file" name="importFile" class="hidden" required />
      </div>

      <div class="flex justify-between gap-4">
        <button type="submit" class="btn w-1/2">Importa</button>
        <a href="/dashboard" class="btn w-1/2 text-center">Indietro</a>
      </div>
    </form>
  </div>
</main>

<%- include('partials/footer') %>
